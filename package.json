{
  "name": "@kannkyo/boilerplate-typescript",
  "version": "0.0.4",
  "repository": "https://github.com/kannkyo/boilerplate-typescript",
  "author": "kannkyo <15080890+kannkyo@users.noreply.github.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "module": "dist/typescript.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "push": "git push --follow-tags origin main",
    "release": "standard-version",
    "prepack": "cyclonedx-bom -o sbom.xml",
    "prepare": "husky install",
    "doc": "typedoc src",
    "old:doc": "jsdoc -c .jsdoc.json -P package.json -R README.md",
    "old:dmd": "jsdoc2md -c .jsdoc.json -f . --no-gfm > api.md",
    "debug": "cross-env DEBUG=* npm run start"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "typedoc": "^0.23.14"
  },
  "devDependencies": {
    "@cyclonedx/bom": "^3.10.4",
    "@tsconfig/recommended": "^1.0.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.7.13",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jest-junit": "^14.0.0",
    "jsdoc": "^3.6.11",
    "jsdoc-to-markdown": "^7.1.1",
    "minami": "^1.2.3",
    "node-notifier": ">=10.0.1",
    "standard-version": "^9.5.0",
    "ts-standard": "^11.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  },
  "files": [
    "dist",
    "sbom.xml"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "collectCoverage": true,
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
